/* pages/my-bought-items/my-bought-items.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载和错误状态 */
.loading-wrapper, .error-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading, .error {
  text-align: center;
  color: #999;
}

.retry-btn {
  margin-top: 20rpx;
  background-color: #0096c3;
  color: white;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  border: none;
}

/* 状态筛选标签 - 四个分类布局 */
.status-tabs {
  display: flex;
  background-color: white;
  padding: 0;
  border-bottom: 1rpx solid #e5e5e5;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 8rpx;
  position: relative;
  min-width: 0;
  background-color: white;
  transition: all 0.3s ease;
}

.status-tab:active {
  background-color: #f8f8f8;
}

.status-tab.active {
  color: #0096c3;
}

.status-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 50rpx;
  height: 4rpx;
  background-color: #0096c3;
  border-radius: 2rpx;
}

.tab-label {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tab-count {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.status-tab.active .tab-count {
  color: #0096c3;
  transform: scale(1.1);
}

/* 商品列表容器 */
.items-container {
  padding: 20rpx;
  margin-top: -90rpx; /* 为四个tab留出空间 */
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 商品列表 */
.items-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item-card {
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.item-card:active {
  transform: scale(0.98);
}

/* 商品主要内容区域 - 左图右文布局 */
.item-main-content {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

/* 左侧图片区域 */
.item-image-section {
  position: relative;
  flex-shrink: 0;
}

.item-thumbnail {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.status-tag {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-size: 18rpx;
  color: white;
  font-weight: bold;
}

.status-seeking {
  background-color: #0096c3;
}

.status-bought {
  background-color: #52c41a;
}

.status-inactive {
  background-color: #faad14;
}

/* 右侧信息区域 */
.item-detail-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #0096c3;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  gap: 15rpx;
}

.create-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

.bought-tag {
  display: flex;
  gap: 15rpx;
}

.bought-time {
  font-size: 22rpx;
  color: #52c41a;
  white-space: nowrap;
}
/* 预算价格区域布局 */
.item-price-section {
  display: flex;
  align-items: center;
  gap: 5rpx;
  margin-bottom: 15rpx;
}

.price-label {
  font-size: 32rpx;
  color: #0096c3;
  font-weight: bold;
}

.item-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #0096c3;
}

.price-edit-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx;
  transition: all 0.2s ease;
}

.price-edit-btn:active {
  transform: scale(0.9);
}

.edit-icon {
  width: 48rpx;
  height: 48rpx;
}
.price-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 60rpx;
  box-sizing: border-box;
  animation: fadeIn 0.3s ease-out;
}

.price-modal {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 100%;
  max-width: 600rpx;
  position: relative;
  z-index: 10000;
  animation: slideUp 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 弹窗头部 */
.modal-header {
  padding: 0;
  text-align: center;
  border-bottom: none;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 0;
}

/* 弹窗内容 */
.modal-content {
  padding: 0;
}

.price-input-section {
  margin-bottom: 30rpx;
}

.modal-content .price-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.price-input-wrapper {
  display: flex;
  align-items: center;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background: #fafafa;
  transition: all 0.3s ease;
  min-height: 80rpx;
}

.price-input-wrapper:focus-within {
  border-color: #0096c3;
  background: white;
}

.currency-symbol {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
  font-weight: 500;
}

.price-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.price-tip {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
}

/* 弹窗底部按钮 - 参考设置页面样式 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  cursor: pointer;
  user-select: none;
  transition: all 0.2s ease;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.cancel-btn:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.confirm-btn {
  background: #0096c3;
  color: #fff;
}

.confirm-btn:active {
  background: #1573cc;
  transform: scale(0.98);
}

.confirm-btn:disabled,
.confirm-btn.disabled {
  background: #d9d9d9;
  color: #999;
  transform: none;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .price-modal {
    width: calc(100vw - 80rpx);
    max-width: none;
    padding: 30rpx;
  }
  
  .price-input-wrapper {
    padding: 0 15rpx;
    min-height: 70rpx;
  }
  
  .price-input {
    height: 70rpx;
    font-size: 26rpx;
  }
  
  .modal-btn {
    font-size: 26rpx;
    padding: 20rpx;
  }
}

/* 操作按钮区域 - 支持多个按钮布局 */
.item-actions {
  display: flex;
  padding: 15rpx 20rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafafa;
  gap: 10rpx;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  min-width: 0;
  padding: 12rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  text-align: center;
  border: none;
  transition: all 0.2s ease;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 主要操作按钮 */
.action-btn.primary {
  background-color: #0096c3;
  color: white;
}

.action-btn.primary:active {
  background-color: #0096c3;
}

/* 次要操作按钮 */
.action-btn.secondary {
  background-color: #faad14;
  color: white;
}

.action-btn.secondary:active {
  background-color: #d48806;
}

/* 危险操作按钮 */
.action-btn.danger {
  background-color: #ff4d4f;
  color: white;
}

.action-btn.danger:active {
  background-color: #d9363e;
}

/* 已买到信息 */
.bought-info {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15rpx 0;
}

.bought-text {
  font-size: 26rpx;
  color: #52c41a;
  font-weight: bold;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .items-container {
    margin-top: 105rpx; /* 小屏幕调整 */
  }
  
  .item-main-content {
    gap: 15rpx;
  }
  
  .item-thumbnail {
    width: 140rpx;
    height: 140rpx;
  }
  
  .item-title {
    font-size: 30rpx;
  }
  
  .item-price {
    font-size: 32rpx;
  }

  .status-tabs {
    font-size: 24rpx;
  }
  
  .tab-label {
    font-size: 24rpx;
  }
  
  .tab-count {
    font-size: 20rpx;
  }
  
  .action-btn {
    font-size: 22rpx;
    padding: 10rpx 12rpx;
  }
}