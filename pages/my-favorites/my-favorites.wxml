<!-- pages/my-favorites/my-favorites.wxml -->
<view class="container">
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading-wrapper">
    <view class="loading">
      <text>加载中...</text>
    </view>
  </view>

  <!-- 错误状态 -->
  <view wx:elif="{{error}}" class="error-wrapper">
    <view class="error">
      <text>{{error}}</text>
      <button class="retry-btn" bindtap="loadFavoriteItems">重试</button>
    </view>
  </view>

  <!-- 内容区域 -->
  <view wx:else>
    <!-- 类型筛选标签 - 固定在顶部 -->
    <view class="type-tabs">
      <view 
        wx:for="{{typeOptions}}" 
        wx:key="key"
        class="type-tab {{activeType === item.key ? 'active' : ''}}"
        data-type="{{item.key}}"
        bindtap="switchType"
      >
        <text class="tab-label">{{item.label}}</text>
        <text class="tab-count">({{item.count}})</text>
      </view>
    </view>

    <!-- 商品列表 -->
    <view class="items-container">
      <view wx:if="{{filteredItems.length === 0}}" class="empty-state">
        <image class="empty-icon" src="/images/like.png" mode="aspectFit" />
        <text class="empty-text">暂无收藏</text>
        <text class="empty-tip">
          {{activeType === 'all' ? '还没有收藏任何商品' : '该类型下暂无收藏'}}
        </text>
      </view>

      <view wx:else class="items-list">
        <view 
          wx:for="{{filteredItems}}" 
          wx:key="id"
          class="item-card"
          data-item-id="{{item.id}}"
          bindtap="onItemTap"
        >
          <!-- 商品主要内容：左图右文布局 -->
          <view class="item-main-content">
            <!-- 左侧：商品缩略图 -->
            <view class="item-image-section">
              <image 
                class="item-thumbnail" 
                src="{{item.images && item.images[0] ? item.images[0] : '/images/placeholder.png'}}"
                mode="aspectFill"
              />
              <!-- 交易类型标签 -->
              <view class="trade-type-tag {{item.tradeType === 'sell' ? 'type-sell' : 'type-buy'}}">
                {{item.tradeTypeText}}
              </view>
            </view>

            <!-- 右侧：商品信息 -->
            <view class="item-detail-section">
              <!-- 商品标题 -->
              <view class="item-title">{{item.title}}</view>
              
              <!-- 商品描述 -->
              <view class="item-description">{{item.description}}</view>
              
              <!-- 商品价格 -->
              <view class="item-price">
                <text class="price-symbol">{{item.tradeType === 'sell' ? '¥' : '预算¥'}}</text>
                <text class="price-value">{{item.price}}</text>
              </view>
              
              <!-- 收藏时间和统计信息 -->
              <view class="item-meta">
                <text class="favorite-time">收藏：{{item.favoriteTime}}</text>
                <view class="item-stats">
                  <text class="stat-item">👀 {{item.viewCount}}</text>
                  <text class="stat-item">❤️ {{item.likeCount}}</text>
                </view>
              </view>
            </view>
          </view>

          <!-- 发布者信息区域 -->
          <view class="author-info">
            <view class="author-details">
              <image class="author-avatar" src="{{item.authorAvatar}}" />
              <view class="author-text">
                <text class="author-info-label">{{item.tradeType === 'sell' ? '卖家' : '求购者'}}</text>
                <text class="author-name">{{item.authorName}}</text>
              </view>
            </view>
            <text class="contact-info" wx:if="{{item.contactInfo}}">{{item.contactInfo}}</text>
          </view>

          <!-- 操作按钮 -->
          <view class="item-actions">
            <button 
              class="action-btn secondary"
              data-item-id="{{item.id}}"
              catchtap="contactAuthor"
            >
              {{item.actionText}}
            </button>
            <button 
              class="action-btn tertiary"
              data-item-id="{{item.id}}"
              catchtap="shareItem"
            >
              分享
            </button>
            <button 
              class="action-btn danger"
              data-item-id="{{item.id}}"
              catchtap="unfavoriteItem"
            >
              取消收藏
            </button>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>