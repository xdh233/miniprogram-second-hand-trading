/* pages/my-favorites/my-favorites.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载和错误状态 */
.loading-wrapper, .error-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading, .error {
  text-align: center;
  color: #999;
}

.retry-btn {
  margin-top: 20rpx;
  background-color: #0096c3;
  color: white;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  border: none;
}

/* 类型筛选标签 - 紧贴返回栏 */
.type-tabs {
  display: flex;
  background-color: white;
  padding: 0;
  border-bottom: 1rpx solid #e5e5e5;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.type-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx 10rpx;
  position: relative;
  min-width: 0;
  background-color: white;
  transition: all 0.3s ease;
}

.type-tab:active {
  background-color: #f8f8f8;
}

.type-tab.active {
  color: #0096c3;
}

.type-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #0096c3;
  border-radius: 2rpx;
}

.tab-label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tab-count {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.type-tab.active .tab-count {
  color: #0096c3;
  transform: scale(1.1);
}

/* 商品列表容器 */
.items-container {
  padding: 15rpx 20rpx 20rpx;
  margin-top: 80rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 商品列表 */
.items-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.item-card {
  background-color: white;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.item-card:active {
  transform: scale(0.98);
}

/* 商品主要内容区域 - 左图右文布局 */
.item-main-content {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}

/* 左侧图片区域 */
.item-image-section {
  position: relative;
  flex-shrink: 0;
}

.item-thumbnail {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.trade-type-tag {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  font-size: 18rpx;
  color: white;
  font-weight: bold;
}

.type-sell {
  background-color: #52c41a;
}

.type-buy {
  background-color: #1890ff;
}

/* 右侧信息区域 */
.item-detail-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-description {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item-price {
  margin-bottom: 15rpx;
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 24rpx;
  color: #ff6b35;
  margin-right: 4rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  gap: 15rpx;
}

.favorite-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

.item-stats {
  display: flex;
  gap: 15rpx;
}

.stat-item {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
}

/* 发布者信息区域 */
.author-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #f9f9f9;
  border-top: 1rpx solid #f0f0f0;
}

.author-details {
  display: flex;
  align-items: center;
  flex: 1;
}

.author-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.author-text {
  display: flex;
  flex-direction: column;
}

.author-info-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 2rpx;
}

.author-name {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.contact-info {
  font-size: 22rpx;
  color: #0096c3;
  flex-shrink: 0;
  background-color: #e8f4ff;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 操作按钮区域 */
.item-actions {
  display: flex;
  padding: 15rpx 20rpx;
  gap: 10rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fafafa;
}

.action-btn {
  flex: 1;
  padding: 12rpx 0;
  border-radius: 6rpx;
  font-size: 24rpx;
  text-align: center;
  border: none;
  transition: all 0.2s ease;
}

.action-btn.secondary {
  background-color: #0096c3;
  color: white;
}

.action-btn.secondary:active {
  background-color: #007aa3;
}

.action-btn.tertiary {
  background-color: #f0f0f0;
  color: #666;
}

.action-btn.tertiary:active {
  background-color: #e0e0e0;
}

.action-btn.danger {
  background-color: #ff4d4f;
  color: white;
}

.action-btn.danger:active {
  background-color: #d9363e;
}

/* 收藏特殊样式 */
.item-card {
  position: relative;
}

.item-card::before {
  content: '♥';
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  font-size: 24rpx;
  color: #0096c3;
  z-index: 1;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .items-container {
    margin-top: 75rpx;
  }
  
  .item-main-content {
    gap: 15rpx;
  }
  
  .item-thumbnail {
    width: 140rpx;
    height: 140rpx;
  }
  
  .item-title {
    font-size: 30rpx;
  }
  
  .price-value {
    font-size: 32rpx;
  }
  
  .item-actions {
    flex-wrap: wrap;
  }
  
  .action-btn {
    min-width: 80rpx;
    font-size: 22rpx;
  }

  .type-tabs {
    font-size: 26rpx;
  }
  
  .tab-label {
    font-size: 26rpx;
  }
}