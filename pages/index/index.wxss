/* index.wxss - 完整版 */

page {
  background-color: #f5f5f5;
}

.container {
  padding-bottom: 100rpx;
}

/* 调试区域 - 开发完成后删除 */
.debug-section {
  background: #fff3cd;
  border-bottom: 2rpx solid #ffeaa7;
  padding: 20rpx;
  font-size: 24rpx;
}

.debug-info {
  margin-bottom: 15rpx;
  color: #856404;
}

.debug-buttons {
  display: flex;
  gap: 10rpx;
}

/* 用户信息区域 */
.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  color: white;
}

.user-avatar .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background: rgba(255, 255, 255, 0.1);
}

.user-info {
  flex: 1;
  margin-left: 20rpx;
}

.welcome {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.username {
  font-size: 32rpx;
  font-weight: 600;
}

.logout-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  font-size: 24rpx;
}

/* 未登录提示 */
.no-user-section {
  background: #f8d7da;
  padding: 30rpx;
  text-align: center;
  color: #721c24;
  border-bottom: 2rpx solid #f5c6cb;
}

.no-user-text {
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

/* 搜索栏 */
.search-section {
  padding: 30rpx;
  background: white;
  margin-bottom: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  border: 2rpx solid #e5e5e5;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.search-icon {
  margin-right: 15rpx;
  color: #999;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
}

/* 快捷功能 */
.quick-actions {
  display: flex;
  background: white;
  padding: 40rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  margin: 0 20rpx 20rpx;
}

.action-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 10rpx;
  transition: all 0.3s ease;
  border-radius: 8rpx;
}

.action-item:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.action-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.action-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 分类区域 */
.category-section {
  background: white;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.more-link {
  font-size: 26rpx;
  color: #667eea;
  font-weight: normal;
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  width: 25%;
  text-align: center;
  padding: 25rpx 10rpx;
  transition: all 0.3s ease;
  border-radius: 8rpx;
}

.category-item:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.category-icon {
  font-size: 50rpx;
  margin-bottom: 15rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 最新商品 */
.latest-section {
  background: white;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
}

.items-scroll {
  white-space: nowrap;
  padding: 20rpx 0;
}

.item-card {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  overflow: hidden;
  vertical-align: top;
  transition: all 0.3s ease;
}

.item-card:active {
  transform: scale(0.95);
}

.item-image {
  width: 100%;
  height: 150rpx;
  background: #e0e0e0;
}

.item-info {
  padding: 20rpx 15rpx;
}

.item-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.item-price {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: 600;
}

/* 热门商品 */
.hot-section {
  background: white;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
}

.hot-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.hot-item {
  width: calc(50% - 10rpx);
  background: #f8f8f8;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.hot-item:active {
  transform: scale(0.95);
}

.hot-image {
  width: 100%;
  height: 200rpx;
  background: #e0e0e0;
}

.hot-info {
  padding: 20rpx 15rpx;
}

.hot-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.hot-price {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.hot-likes {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
}

/* 公告区域 */
.notice-section {
  background: white;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
}

.notice-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.notice-item:last-child {
  margin-bottom: 0;
}

/* 底部占位 */
.bottom-space {
  height: 40rpx;
}

/* 响应式适配 */
@media (max-width: 400px) {
  .hot-item {
    width: 100%;
  }
  
  .category-item {
    width: 33.33%;
  }
}