/* pages/index/index.wxss - 优化版帖子流 */

page {
  background-color: #fff;
  height: 100%;
  margin: 0;
  padding: 0;
}

.container {              
  background: #fff;
  margin: 0;
  padding: 0;
  position: absolute; /* 绝对定位 */
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 统一内容容器 */
.content-container {
  background: #fff;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* 顶部搜索栏 */
.search-header {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  height: 56rpx;
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 帖子容器 */
.posts-container {
  flex: 1;
  background: #fff; /* 改为白色背景 */
}

/* 帖子卡片 */
.post-card {
  background: white;
  padding: 30rpx;
  margin: 0 0 20rpx 0; /* 增加底部间距，用白色背景分隔 */
  border-bottom: 20rpx solid #f5f5f5; /* 用边框创建分隔效果 */
}

.post-card:last-child {
  border-bottom: none; /* 最后一个卡片不需要分隔 */
}

/* 用户信息栏 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 20rpx;
}

.post-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  word-wrap: break-word;
}

/* 图片内容 */
.post-images {
  margin-bottom: 20rpx;
}

/* 单图显示 */
.single-image {
  width: 100%;
}

.post-image {
  width: 100%;
  max-width: 500rpx;
  border-radius: 12rpx;
}

/* 多图网格 */
.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.grid-image {
  border-radius: 12rpx;
  background: #f0f0f0;
}

/* 2图布局 */
.grid-2 .grid-image {
  width: calc(50% - 4rpx);
  height: 280rpx;
}

/* 3图布局（默认） */
.images-grid:not(.grid-2):not(.grid-4) .grid-image {
  width: calc(33.33% - 6rpx);
  height: 180rpx;
}

/* 4图布局 */
.grid-4 .grid-image {
  width: calc(50% - 4rpx);
  height: 180rpx;
}

/* 超过4图的布局 */
.images-grid:not(.grid-2):not(.grid-4) .grid-image:nth-child(n+4) {
  display: none;
}

/* 互动栏 */
.post-actions {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
  color: #999;
  transition: all 0.2s ease;
  border-radius: 8rpx;
}

.action-item:active {
  background: #f8f8f8;
}

/* 自定义图标样式 */
.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 28rpx;
  margin-left: 8rpx;
  color: #666;
}

.action-text.liked {
  color: #f993c5;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
  background: #fff; /* 改为白色背景 */
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
  background: #fff; /* 改为白色背景 */
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin: 30rpx 0 10rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 初始加载 */
.initial-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 10;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}