/* pages/index/index.wxss - 纯帖子流版本 */

page {
  background-color: #f5f5f5;  /*页面背景颜色；占满整个页面*/
  height: 100%;
}

.container {              
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部搜索栏 */
.search-header {
  background: #f5f5f5;
  padding: 15rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  border-bottom: 1rpx solid #f0f0f0; /* 添加一条分割线 */
}

.search-container {
  padding: 0;
}

.search-box {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  height: 56rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 帖子容器包装 */
.posts-wrapper {
  flex: 1;
  margin-top: 87rpx; /* 为固定的搜索栏留出空间，这个值是你search-header的高度 */
}

/* 帖子容器 */
.posts-container {
  height: 100%;
}

/* 帖子卡片 */
.post-card {
  background: white;
  padding: 20rpx;
  margin: 0 0 20rpx 0;  /* 添加外边距 */
}

.post-card:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.loading-more,
.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}
/* 用户信息栏 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 30rpx;
  color: white;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 5rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 15rpx;
  padding-left: 75rpx; /* 对齐到用户名下方 */
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  word-wrap: break-word;
}

/* 图片内容 */
.post-images {
  margin-bottom: 15rpx;
  padding-left: 75rpx; /* 对齐到用户名下方 */
}

/* 单图显示 */
.single-image {
  width: 100%;
}

.post-image {
  width: 100%;
  border-radius: 8rpx;
}

/* 多图网格 */
.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.grid-image {
  border-radius: 8rpx;
  background: #f0f0f0;
}

/* 2图布局 */
.grid-2 .grid-image {
  width: calc(50% - 5rpx);
  height: 300rpx;
}

/* 3图布局（默认） */
.images-grid:not(.grid-2):not(.grid-4) .grid-image {
  width: calc(33.33% - 7rpx);
  height: 200rpx;
}

/* 4图布局 */
.grid-4 .grid-image {
  width: calc(50% - 5rpx);
  height: 200rpx;
}

/* 超过4图的布局 */
.images-grid:not(.grid-2):not(.grid-4) .grid-image:nth-child(n+4) {
  display: none;
}

/* 互动栏 */
.post-actions {
  display: flex;
  align-items: center;
  padding-top: 15rpx;
  margin-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  color: #999;
  transition: all 0.3s ease;
}

.action-item:active {
  background: #f0f0f0;
  border-radius: 8rpx;
}

.action-text {
  font-size: 28rpx;
  margin-left: 10rpx;
  color: #666;
}

.action-text.liked {
  color: #ff6b6b;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin: 20rpx 0 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 初始加载 */
.initial-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}