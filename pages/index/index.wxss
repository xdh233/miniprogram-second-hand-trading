/* pages/index/index.wxss - 完整优化版 */

page {
  background-color: #fff;
  height: 100%;
  margin: 0;
  padding: 0;
}

.container {              
  background: #fff;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 统一内容容器 */
.content-container {
  background: #fff;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* 顶部搜索栏 */
.search-header {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  height: 56rpx;
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 帖子容器 */
.posts-container {
  flex: 1;
  height: 0; 
  background: #fff;
}

/* 帖子卡片 */
.post-card {
  background: white;
  padding: 30rpx;
  margin: 0 0 20rpx 0;
  border-bottom: 20rpx solid #f5f5f5;
  transition: all 0.2s ease;
}

.post-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.post-card:last-child {
  border-bottom: none;
}

/* 用户信息栏 */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #ffffff 0%, #ffffff 100%);
  transition: opacity 0.2s ease;
}

.user-avatar:active {
  opacity: 0.8;
}

.user-info {
  flex: 1;
}

.user-name-row {
  margin-bottom: 6rpx;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  display: inline-block;
  margin: 4rpx 8rpx 4rpx 0;
  border-radius: 6rpx;
}

.user-name:active {
  background: rgba(102, 126, 234, 0.1);
  opacity: 0.8;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 20rpx;
}

.post-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  word-wrap: break-word;
}

/* ✅ 优化后的图片样式 */
.post-images {
  margin: 20rpx 0;
}

/* 单图样式 */
.single-image {
  border-radius: 12rpx;
  overflow: hidden;
}

.post-image-single {
  width: 100%;
  max-height: 600rpx;
  border-radius: 12rpx;
}

/* 多图网格样式 */
.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.grid-item {
  border-radius: 8rpx;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

/* 2张图片：一行两个 */
.images-grid-2 .grid-item {
  width: calc(50% - 4rpx);
  height: 200rpx;
}

/* 3张图片：第一张大图，后两张小图 */
.images-grid-3 .grid-item:first-child {
  width: 100%;
  height: 240rpx;
}

.images-grid-3 .grid-item:not(:first-child) {
  width: calc(50% - 4rpx);
  height: 160rpx;
}

/* 4张图片：2x2网格 */
.images-grid-4 .grid-item {
  width: calc(50% - 4rpx);
  height: 180rpx;
}

/* 5张图片：前两张一行，后三张一行 */
.images-grid-5 .grid-item:nth-child(-n+2) {
  width: calc(50% - 4rpx);
  height: 180rpx;
}

.images-grid-5 .grid-item:nth-child(n+3) {
  width: calc(33.33% - 6rpx);
  height: 140rpx;
}

/* 6张图片：2行，每行3个 */
.images-grid-6 .grid-item {
  width: calc(33.33% - 6rpx);
  height: 160rpx;
}

/* 7-9张图片：3行，每行最多3个 */
.images-grid-7 .grid-item,
.images-grid-8 .grid-item,
.images-grid-9 .grid-item {
  width: calc(33.33% - 6rpx);
  height: 140rpx;
}

/* 互动栏 */
.post-actions {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  margin-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 重置分享按钮样式 */
.share-button {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0;
  font-size: inherit;
  line-height: inherit;
}

.share-button::after {
  border: none;
}

.action-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
  color: #999;
  transition: all 0.2s ease;
  border-radius: 8rpx;
}

.action-item:active {
  background: #f8f8f8;
}

/* 自定义图标样式 */
.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 28rpx;
  margin-left: 8rpx;
  color: #666;
}

.action-text.liked {
  color: #f993c5;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
  background: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
  background: #fff;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin: 30rpx 0 10rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 初始加载 */
.initial-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 10;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 📱 响应式适配 */
@media screen and (max-width: 750rpx) {
  .post-image-single {
    max-height: 500rpx;
  }
  
  .images-grid-3 .grid-item:first-child {
    height: 200rpx;
  }
  
  .images-grid-3 .grid-item:not(:first-child) {
    height: 130rpx;
  }
}

/* 🎨 额外的视觉效果 */
.grid-item {
  position: relative;
  transition: transform 0.2s ease;
}

.grid-item:active {
  transform: scale(0.95);
}

/* 图片加载状态 */
.grid-image,
.post-image-single {
  transition: opacity 0.3s ease;
}

.grid-image[lazy-load="loading"],
.post-image-single[lazy-load="loading"] {
  opacity: 0.6;
}

/* 图片数量徽章（可选） */
.images-grid::after {
  content: attr(data-count) "张图片";
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  display: none; /* 默认隐藏，需要时可以显示 */
}