/* publish.wxss - 发布选择页面样式（三个选项版本） */

.container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

/* 遮罩层 - 改为全白背景 */
.publish-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  z-index: 1001;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  transition: opacity 0.3s ease-out;
}

.publish-mask.show {
  opacity: 1;
}

/* 选项容器 */
.picker-options {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  padding: 40rpx 40rpx 60rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  transform: translateY(100%);
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  z-index: 1;
}

.picker-options.show {
  transform: translateY(0);
  opacity: 1;
}

/* 选项卡片 */
.option-item {
  display: flex;
  align-items: center;
  padding: 50rpx 40rpx;
  background: #f8f9fa;
  border-radius: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(20rpx);
}

.option-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.option-item:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.option-item:active::before {
  opacity: 1;
}

/* 为三个选项设置不同的渐变背景 */
.option-item:nth-child(1) {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
}

.option-item:nth-child(2) {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(240, 147, 251, 0.4);
}

.option-item:nth-child(3) {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(79, 172, 254, 0.4);
}

.option-item:nth-child(3) {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(79, 172, 254, 0.4);
}

/* 选项图标 */
.option-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  margin-right: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.icon-emoji {
  font-size: 50rpx;
}

/* 选项信息 */
.option-info {
  flex: 1;
}

.option-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: inherit;
}

.option-desc {
  font-size: 28rpx;
  opacity: 0.8;
  color: inherit;
  line-height: 1.4;
}

/* 右箭头 */
.option-item::after {
  content: '';
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid currentColor;
  border-right: 4rpx solid currentColor;
  transform: translateY(-50%) rotate(45deg);
  opacity: 0.8;
  transition: all 0.3s ease;
}

.option-item:active::after {
  transform: translateY(-50%) rotate(45deg) translateX(4rpx);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 响应式适配 */
@media (max-width: 350px) {
  .option-icon {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
  }
  
  .icon-emoji {
    font-size: 40rpx;
  }
  
  .option-title {
    font-size: 32rpx;
  }
  
  .option-desc {
    font-size: 26rpx;
  }
}