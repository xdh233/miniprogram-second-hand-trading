/* item-detail.wxss */

/* 页面容器的布局 */
.page-container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #0096c3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  padding-bottom: 120rpx; 
  box-sizing: border-box;
}

/* 商品图片轮播 */
.image-container {
  background: white;
  height: 750rpx;
  margin: 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.product-image {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.image-indicator {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  z-index: 10;
}

/* 商品信息卡片 */
.product-card {
  background: white;
  border-radius: 12rpx;
  margin: 16rpx;
  padding: 24rpx;
  position: relative;
  z-index: 1;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卖家信息区域 */
.seller-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.seller-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid #f0f0f0;
  flex-shrink: 0;
}

.seller-info {
  flex: 1;
}

.seller-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

/* 商品标题 */
.product-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

/* 商品价格区域 */
.product-price-section {
  margin-bottom: 20rpx;
}

/* 商品价格 */
.product-price {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  line-height: 1.2;
}

.sell-price {
  color: #ff8c00; /* 橙色 */
}

.buy-price {
  color: #0096c3;
}

.price-label {
  font-size: 48rpx; /* 改为和价格相同大小 */
  font-weight: bold; /* 改为和价格相同粗细 */
  margin-right: 0rpx;
}

/* 商品描述 */
.product-description {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  word-break: break-word;
  margin-bottom: 20rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 20rpx 0;
}

/* 发布时间和浏览次数 */
.product-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

/* 评论容器 */
.comments-container {
  background: white;
  border-radius: 12rpx;
  margin: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 评论输入区域（保持原来的样式） */
.comment-input-section {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  border: 2rpx solid #f0f0f0;
  flex-shrink: 0;
}

.input-container {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 8rpx 16rpx;
  gap: 12rpx;
}

.comment-input-field {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.4;
  min-height: 40rpx;
  border: none;
  background: transparent;
  color: #333;
}

.input-placeholder {
  color: #999;
}

.send-btn {
  background: #ccc;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: background 0.3s;
  min-width: 60rpx;
  text-align: center;
  flex-shrink: 0;
}

.send-btn.active {
  background: #0096c3;
}

/* ===== 评论列表区域（使用 post-detail 样式） ===== */

/* 评论标题和排序区域 */
.comments-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comments-title-section {
  display: flex;
  align-items: center;
}

.comments-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.comments-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 排序标签组样式 */
.sort-tabs {
  display: flex;
  gap: 32rpx;
}

.sort-tab {
  padding: 8rpx 0;
  background: transparent;
  border: none;
  transition: all 0.3s ease;
}

.sort-tab-text {
  font-size: 28rpx;
  color: #8e8e93;
  transition: all 0.3s ease;
}

.sort-tab.active .sort-tab-text {
  color: #0096c3;
  font-weight: 600;
}

/* 嵌套评论列表 */
.comments-list {
  padding: 0 32rpx;
}

/* 评论线程（主评论+回复） */
.comment-thread {
  border-bottom: 1rpx solid #f8f9fa;
  padding-bottom: 24rpx;
  margin-bottom: 24rpx;
}

.comment-thread:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

/* 主评论 */
.comment-item {
  display: flex;
  padding: 24rpx 0 0 0;
}

.main-comment {
  padding-top: 24rpx;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin-right: 20rpx;
  border: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.comment-main {
  flex: 1;
}

/* 评论头部（昵称+楼主标签） */
.comment-header {
  margin-bottom: 12rpx;
}

.comment-user-left {
  display: flex;
  align-items: center;
}

.comment-username {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-right: 16rpx;
  transition: color 0.3s ease;
}

.comment-username:active {
  color: #0096c3;
}

.author-tag {
  background: #0096c3;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  margin-right: 8rpx;
}

/* 评论内容 */
.comment-content-wrapper {
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.comment-content {
  font-size: 28rpx;
  color: #1a1a1a;
  word-break: break-word;
}

/* 评论底部（时间 | 点赞+回复） */
.comment-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.comment-time {
  font-size: 24rpx;
  color: #8e8e93;
}

/* 右侧操作按钮组 */
.comment-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 评论点赞按钮 */
.comment-like-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 6rpx 8rpx;
  background: transparent;
  border: none;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.comment-like-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.comment-like-icon {
  width: 24rpx;
  height: 24rpx;
  transition: all 0.3s ease;
}

.comment-like-btn.liked .comment-like-icon {
  transform: scale(1.1);
}

.comment-like-count {
  font-size: 22rpx;
  color: #8e8e93;
  transition: all 0.3s ease;
}

.comment-like-btn.liked .comment-like-count {
  color: #ff3b30;
  font-weight: 500;
}

/* 回复按钮 */
.reply-btn {
  padding: 6rpx 8rpx;
  background: transparent;
  border: none;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.reply-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.reply-text {
  font-size: 22rpx;
  color: #8e8e93;
  transition: all 0.3s ease;
}

.reply-btn:active .reply-text {
  color: #0096c3;
}

/* 回复容器 */
.replies-container {
  margin: 16rpx 0 0 84rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 16rpx 16rpx 8rpx 16rpx;
}

/* 单个回复项 */
.reply-item {
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #e5e5ea;
}

.reply-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
  padding-bottom: 0;
}

.reply-content {
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.reply-author {
  font-size: 26rpx;
  font-weight: 500;
  color: #0096c3;
  transition: opacity 0.3s ease;
}

.reply-author:active {
  opacity: 0.7;
}

.reply-target {
  color: #0096c3;
  transition: opacity 0.3s ease;
}

.reply-target:active {
  opacity: 0.7;
}

.author-tag-small {
  background: #0096c3;
  color: #fff;
  font-size: 18rpx;
  padding: 1rpx 6rpx;
  border-radius: 6rpx;
  margin: 0 8rpx;
}

.reply-to {
  font-size: 24rpx;
  color: #666;
  margin: 0 4rpx;
}

.reply-text-content {
  font-size: 26rpx;
  color: #1a1a1a;
  word-break: break-word;
}

/* 回复元信息（时间+操作） */
.reply-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.reply-time {
  font-size: 22rpx;
  color: #999;
}

.reply-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 回复的点赞按钮 */
.reply-like-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 8rpx;
  background: transparent;
  border: none;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.reply-like-btn:active {
  background: #e0e0e0;
  transform: scale(0.95);
}

.reply-like-icon {
  width: 24rpx;
  height: 24rpx;
  transition: all 0.3s ease;
}

.reply-like-btn.liked .reply-like-icon {
  transform: scale(1.1);
}

.reply-like-count {
  font-size: 20rpx;
  color: #999;
  transition: all 0.3s ease;
}

.reply-like-btn.liked .reply-like-count {
  color: #ff3b30;
  font-weight: 500;
}

/* 回复的回复按钮 */
.reply-reply-btn {
  padding: 4rpx 8rpx;
  background: transparent;
  border: none;
  border-radius: 16rpx;
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s ease;
}

.reply-reply-btn:active {
  background: #e0e0e0;
  color: #0096c3;
  transform: scale(0.95);
}

/* 展开更多回复 */
.show-more-replies {
  margin-top: -8rpx;
  padding-top: 0rpx;
}

.show-more-btn {
  text-align: center;
  padding: 6rpx 4rpx;
  color: #0096c3;
  font-size: 24rpx;
  background: transparent;
  border: none;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  width: 100%;
  transform: translateY(-4rpx);
}

.show-more-btn:active {
  background: #e5f6ff;
  transform: scale(0.98);
}

/* 加载和空状态 */
.loading-more,
.no-more-comments {
  text-align: center;
  padding: 32rpx;
  color: #8e8e93;
  font-size: 28rpx;
}

.empty-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
}

.empty-comment {
  width: 144rpx;
  height: 144rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-text {
  color: #8e8e93;
  font-size: 28rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 180rpx; 
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  height: 80rpx; 
  padding: 0 16rpx; /* 减少左右padding */
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
  border-top: 1rpx solid #e5e5ea;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

/* 左侧图标区域 */
.left-actions {
  display: flex;
  align-items: center;
  gap: 20rpx; 
  margin-left: 20rpx; /* 移除左边距，让图标更左 */
  margin-top: 30rpx; /* 移除上边距 */
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx; /* 减小尺寸 */
  height: 60rpx; /* 减小尺寸 */
  margin-left: 20rpx; /* 移除左边距 */
  background: transparent;
  border: none;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.liked {
  color: #ff4d4f;
}

.action-icon {
  width: 40rpx; /* 减小图标尺寸 */
  height: 40rpx; /* 减小图标尺寸 */
}

/* 右侧按钮区域 */
.right-actions {
  display: flex;
  align-items: center;
  gap: 12rpx; /* 减少间距 */
  margin-top: 30rpx; /* 移除上边距 */
  margin-right: 0rpx; /* 确保右对齐 */
}

.contact-btn {
  background: #0096c3; 
  color: white;
  border: none;
  padding: 16rpx 0rpx; /* 减少横向padding，缩短按钮 */
  border-radius: 20rpx; /* 减小圆角 */
  font-size: 26rpx; /* 减小字体 */
  font-weight: 500;
  text-align: center;
  width: 200rpx !important; /* 减少最小宽度 */
  height: 56rpx; /* 减小高度 */
  line-height: 1;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact-btn:active {
  transform: scale(0.95);
}

.contact-btn::after {
  border: none;
}

/* 购买按钮 */
.buy-btn {
  background: #ff8c00; /* 橙色背景 */
  color: white;
  border: none;
  padding: 16rpx 20rpx; /* 减少横向padding，缩短按钮 */
  border-radius: 20rpx; /* 减小圆角 */
  font-size: 26rpx; /* 减小字体 */
  font-weight: 500;
  text-align: center;
  width: 200rpx !important; /* 减少最小宽度 */
  height: 56rpx; /* 减小高度 */
  line-height: 1;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buy-btn:active {
  transform: scale(0.95);
  background: #ff7700; /* 按下时颜色稍微深一点 */
}

.buy-btn::after {
  border: none;
}

/* 回复输入浮层（仅用于回复功能） */
.reply-input-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 200;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.overlay-bg {
  flex: 1;
  background: rgba(0, 0, 0, 0.3);
}

.reply-input-panel {
  background: #fff;
  border-top: 1rpx solid #e5e5ea;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

/* 回复提示条 */
.reply-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.reply-hint {
  font-size: 26rpx;
  color: #666;
}

.reply-chain {
  font-size: 22rpx;
  color: #999;
}

.cancel-reply {
  padding: 4rpx 8rpx;
  background: transparent;
  border: none;
  border-radius: 6rpx;
  transition: all 0.3s ease;
}

.cancel-reply:active {
  background: #e0e0e0;
}

.cancel-reply text {
  font-size: 24rpx;
  color: #0096c3;
}

/* 输入框包装器 */
.input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.reply-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  min-height: 40rpx;
  line-height: 1.4;
  border: none;
  outline: none;
}

.input-placeholder {
  color: #999;
}

.send-btn {
  background: #ccc;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
  min-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
}

.send-btn.active {
  background: #0096c3;
  transform: scale(1.02);
}

.send-btn:active {
  transform: scale(0.98);
}