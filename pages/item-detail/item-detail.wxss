page {
  background: #f5f5f5;
  padding-top: 0;
}

.container {
  min-height: 100vh;
  padding-bottom: 140rpx;
  padding-top: 0;
}

/* 头部导航 */
.header {
  background: white;
  padding: 20rpx 30rpx;
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  width: 100%;
  box-sizing: border-box;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  border: 3rpx solid #333;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.back-icon {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.seller-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}

.seller-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.seller-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-right: 30rpx;
}

.action-dots {
  font-size: 32rpx;
  color: #666;
}

.record-btn {
  width: 60rpx;
  height: 60rpx;
  border: 3rpx solid #333;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 32rpx;
  color: #666;
}

/* 商品图片轮播 */
.image-container {
  position: relative;
  background: white;
  height: 750rpx;
  width: 100%;
  margin-top: 140rpx; /* 给头部导航留出更多空间 */
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.product-image {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.image-indicator {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  z-index: 10;
}

/* 商品信息 */
.product-info {
  background: white;
  padding: 30rpx;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.product-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

.product-meta {
  display: flex;
  gap: 40rpx;
  font-size: 28rpx;
  color: #666;
}

/* 商品描述 */
.product-description {
  background: white;
  padding: 30rpx;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.description-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.description-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  white-space: pre-line;
}

/* 评论区 */
.comments-section {
  background: white;
  padding: 30rpx;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.comments-header {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  color: #333;
}

.comment-input {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #ddd;
}

.input-box {
  flex: 1;
  background: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}

.comment-item {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.comment-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #ddd;
}

.comment-content {
  flex: 1;
}

.comment-author {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  color: #333;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.comment-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  z-index: 100;
  border-top: 1rpx solid #e0e0e0;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.action-icon {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  background: white;
}

.action-btn.liked .like-icon {
  background: #ff4d4f;
  border-color: #ff4d4f;
}

.contact-btn {
  flex: 1;
  background: #007AFF;
  color: white;
  border: none;
  padding: 25rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.contact-btn::after {
  border: none;
}

.author-badge {
  background-color: #0096c3;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}