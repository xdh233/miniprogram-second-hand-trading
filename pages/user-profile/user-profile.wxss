/* pages/user-profile/user-profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载和错误状态 */
.loading-wrapper, .error-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}
.loading, .error {
  text-align: center;
  color: #999;
}
.retry-btn {
  margin-top: 20rpx;
  background-color: #0096c3;
  color: white;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}

/* 用户头部信息 (此部分无改动) */
.user-header {
  background: linear-gradient(135deg, #0096c3 0%, #00b4db 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}
.user-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}
.avatar-wrapper {
  position: relative;
  margin-right: 30rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}
.user-details {
  flex: 1;
  padding-top: 10rpx;
}
.user-name {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 15rpx;
}
.gender {
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: white;
}
.gender.female {
  background-color: #ff8cc8;
}
.user-bio {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.4;
  margin-bottom: 8rpx;
}
.action-buttons {
  display: flex;
  gap: 20rpx;
}
.edit-btn, .message-btn {
  flex: 1;
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
  font-size: 28rpx;
  padding: 15rpx 0;
}
.edit-btn:active, .message-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}
.message-btn {
  background-color: #4ecdc4;
  border-color: #4ecdc4;
}

/* 内容切换标签 (此部分无改动) */
.content-tabs {
  display: flex;
  background-color: white;
  border-bottom: 1rpx solid #e5e5e5;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.tab-item.active {
  color: #0096c3;
  font-weight: bold;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #0096c3;
  border-radius: 2rpx;
}

/* 动态列表 (此部分无改动) */
/* ... 您已有的 .posts-list 样式 ... */
/* 动态列表 */
.posts-list {
  background-color: white;
}

.post-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.post-item:last-child {
  border-bottom: none;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.post-actions {
  display: flex;
  gap: 40rpx;
}

.action-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.action-item .icon {
  margin-right: 8rpx;
  font-size: 26rpx;
}


/* --- 全新的/修改过的商品列表样式 --- */
/* 从 market.wxss 复制并适配 */

.items-grid {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 10rpx; /* 增加内外边距 */
  display: flex; /* 使用 flex 实现双列 */
  flex-wrap: wrap; /* 允许换行，虽然这里主要靠JS分配 */
  background: #f5f5f5; /* 确保背景色统一 */
}

.column {
  width: 50%;
  box-sizing: border-box;
}

.left-column {
  padding-right: 10rpx;
}

.right-column {
  padding-left: 10rpx;
}

.item-card {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.item-card:active {
  transform: scale(0.98);
}

/* 商品图片容器 */
.item-image-container {
  position: relative;
  width: 100%;
  /* 使高度与宽度成比例，以获得更好的响应式效果 */
  padding-top: 100%; /* 1:1 的宽高比 */
}

.item-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.status-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

/* 商品信息 */
.item-info {
  padding: 20rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  /* 文本溢出显示省略号 (最多两行) */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 设置一个最小高度，防止因文本行数不同导致卡片高度不一 */
  min-height: 78rpx; 
}

.item-price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
}

/* 求购商品价格使用绿色 */
.want-price {
  color: #0096c3;
}

/* 空状态样式调整 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
  background-color: #f5f5f5; /* 匹配页面背景色 */
  margin: 0;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}