/* pages/user-profile/user-profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载和错误状态 */
.loading-wrapper, .error-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading, .error {
  text-align: center;
  color: #999;
}

.retry-btn {
  margin-top: 20rpx;
  background-color: #007aff;
  color: white;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}

/* 用户头部信息 */
.user-header {
  background: linear-gradient(135deg, #0096c3 0%, #00b4db 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.user-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.avatar-wrapper {
  position: relative;
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-details {
  flex: 1;
  padding-top: 10rpx;
}

.user-name {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 15rpx;
}

.gender {
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: white;
}

.gender.male {
  background-color: #4dabf7;
}

.gender.female {
  background-color: #ff8cc8;
}

.user-bio {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

/* 统计信息 */
.stats {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.edit-btn, .follow-btn, .message-btn {
  flex: 1;
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
  font-size: 28rpx;
  padding: 15rpx 0;
}

.edit-btn:active, .follow-btn:active, .message-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.follow-btn {
  background-color: #ff6b6b;
  border-color: #ff6b6b;
}

.follow-btn.following {
  background-color: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.8);
}

.message-btn {
  background-color: #4ecdc4;
  border-color: #4ecdc4;
}

.more-btn {
  width: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 25rpx;
  font-size: 24rpx;
  padding: 15rpx 0;
}

.more-btn:active {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 内容切换标签 */
.content-tabs {
  display: flex;
  background-color: white;
  border-bottom: 1rpx solid #e5e5e5;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #007aff;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #007aff;
  border-radius: 2rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
  background-color: white;
}

/* 动态列表 */
.posts-list {
  background-color: white;
}

.post-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.post-item:last-child {
  border-bottom: none;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.post-actions {
  display: flex;
  gap: 40rpx;
}

.action-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.action-item .icon {
  margin-right: 8rpx;
  font-size: 26rpx;
}

/* 商品标签页内容 */
.items-tab-content {
  background: #f5f5f5;
  min-height: 400rpx;
}

/* 商品网格布局 - 超简单版本 */
.items-grid {
  display: flex;
  padding: 15rpx;
  background: #f5f5f5;
}

.column {
  width: 50%;
  padding: 0 10rpx;
}

.item-card {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.item-card:active {
  transform: scale(0.98);
}

/* 商品图片容器 */
.item-image-container {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.item-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
  object-fit: cover;
  display: block;
}

.status-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

/* 商品信息 */
.item-info {
  padding: 20rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

.item-price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-views {
  font-size: 22rpx;
  color: #999;
}

.item-time {
  font-size: 22rpx;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .items-grid {
    display: block;
  }
  
  .column {
    width: 100%;
    padding: 0 !important;
  }
}