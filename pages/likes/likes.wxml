<view class="container">
  <view class="content-container">
    <!-- 顶部标题栏 -->
    <view class="header">
      <view class="title-section">
        <text class="page-title">点赞通知</text>
        <text class="count-text" wx:if="{{likeList.length > 0}}">{{likeList.length}}条通知</text>
      </view>
    </view>

    <!-- 点赞列表 -->
    <scroll-view 
      class="likes-container"
      scroll-y
      enable-back-to-top
      refresher-enabled
      refresher-triggered="{{refreshing}}"
      bindrefresherrefresh="onPullDownRefresh"
    >
      <!-- 点赞列表内容 -->
      <view class="like-list" wx:if="{{likeList.length > 0}}">
        <view class="like-item" 
          wx:for="{{likeList}}" 
          wx:key="id"
          data-item="{{item}}"
          bindtap="navigateToContent"
          bindlongpress="onLongPressLike"
        >
          <view class="like-main">
            <!-- 头像区域 -->
            <view class="avatar-container">
              <image class="avatar" src="{{item.userAvatar}}" mode="aspectFill"/>
              <!-- 点赞图标 -->
              <image class="like-icon" src="../../images/like-active.png" mode="aspectFit" />
            </view>
            
            <view class="like-info">
              <view class="like-header">
                <text class="user-name">{{item.userName}}</text>
                <text class="time">{{item.time}}</text>
              </view>
              
              <view class="like-content">
                <!-- 点赞类型标识 -->
                <view class="like-type">
                  <text wx:if="{{item.likeType === 'post'}}" class="type-tag post-like">赞了你的动态</text>
                  <text wx:elif="{{item.likeType === 'comment'}}" class="type-tag comment-like">赞了你的评论</text>
                  <text wx:elif="{{item.likeType === 'item'}}" class="type-tag item-like">赞了你的商品</text>
                </view>
                
                <!-- 被点赞的内容 -->
                <view class="target-content">
                  <text class="content-text">{{item.targetContent}}</text>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>

      <!-- 空状态 -->
      <view class="empty-state" wx:if="{{likeList.length === 0 && !loading}}">
        <image class="empty-icon" src="../../images/comment_empty.png" mode="aspectFit" />
        <text class="empty-title">暂无点赞通知</text>
        <text class="empty-subtitle">当有人为你的动态或评论点赞时会显示在这里</text>
      </view>

      <!-- 加载状态 -->
      <view class="loading-state" wx:if="{{loading}}">
        <text>加载中...</text>
      </view>
    </scroll-view>
  </view>
</view>