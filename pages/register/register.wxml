<view class="container">
  <view class="form">
    <view class="title">注册账号</view>
    
    <view class="input-group">
      <input 
        placeholder="学号格式：S12345678" 
        bindinput="onStudentIdInput" 
        value="{{studentId}}"
        maxlength="9"
      />
      <view class="input-hint">学号格式：B或S开头+8位数字</view>
    </view>
    
    <view class="input-group">
      <input 
        placeholder="请输入真实姓名" 
        bindinput="onNameInput" 
        value="{{name}}"
        maxlength="10"
      />
    </view>
    
    <view class="input-group">
      <input 
        placeholder="请输入密码（至少6位）" 
        password="true" 
        bindinput="onPasswordInput" 
        value="{{password}}"
        maxlength="20"
      />
    </view>
    
    <view class="input-group">
      <input 
        placeholder="请再次输入密码" 
        password="true" 
        bindinput="onConfirmPasswordInput" 
        value="{{confirmPassword}}"
        maxlength="20"
      />
    </view>
    
    <button 
      class="register-btn {{loading ? 'loading' : ''}}" 
      bindtap="register" 
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      {{loading ? '注册中...' : '注册'}}
    </button>
    
    <view class="login-link" bindtap="goToLogin">
      已有账号？点击登录
    </view>
    
    <!-- 添加格式说明 -->
    <view class="format-tips">
      <text class="tips-title">注册说明：</text>
      <text class="tips-item">• 学号：S或B开头+8位数字（如S12345678）</text>
      <text class="tips-item">• 密码：至少6位字符</text>
      <text class="tips-item">• 请使用真实姓名注册</text>
    </view>
  </view>
</view>