<view class="container">
  <view class="form">
    <view class="title">注册账号</view>
    
    <view class="input-group">
      <input placeholder="请输入学号" bindinput="onStudentIdInput" value="{{studentId}}" />
    </view>
    
    <view class="input-group">
      <input placeholder="请输入姓名" bindinput="onNameInput" value="{{name}}" />
    </view>
    
    <view class="input-group">
      <input placeholder="请输入密码" password="true" bindinput="onPasswordInput" value="{{password}}" />
    </view>
    
    <view class="input-group">
      <input placeholder="请确认密码" password="true" bindinput="onConfirmPasswordInput" value="{{confirmPassword}}" />
    </view>
    
    <button class="register-btn" bindtap="register" loading="{{loading}}">注册</button>
    
    <view class="login-link" bindtap="goToLogin">
      已有账号？点击登录
    </view>
  </view>
</view>