/* pages/publish-post/publish-post.wxss */
page {
  background: #f5f5f5;
  height: 100%;
}

.publish-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 内容容器 */
.content-container {
  flex: 1;
  padding: 20rpx 30rpx;
  overflow-y: auto;
  padding-bottom: 120rpx; /* 给底部发布按钮留出空间 */
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 文本输入区 */
.text-input-area {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  border: none;
  outline: none;
}

.input-placeholder {
  color: #999;
}

.text-count {
  position: absolute;
  bottom: 15rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片区域 */
.image-area {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.add-image-btn:active {
  background: #f8f8f8;
  border-color: #0096c3;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

.image-tip {
  margin-top: 20rpx;
  text-align: center;
}

.image-tip text {
  font-size: 24rpx;
  color: #999;
}

/* 发布提示 */
.publish-tips {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.tip-text:last-child {
  margin-bottom: 0;
}

/* 底部发布按钮 */
.publish-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #eee;
}

.publish-button {
  width: 100%;
  height: 88rpx;
  background: #ddd;
  color: #999;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.publish-button.active {
  background: #0096c3;
  color: #fff;
}

.publish-button.active:active {
  background: #0096c3;
}

.publish-button[disabled] {
  opacity: 0.6;
}