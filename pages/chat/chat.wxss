.content-container {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 176rpx; /* 固定值，约等于导航栏总高度 */
  padding-bottom: 120rpx; /* 减小底部间距 */
  box-sizing: border-box;
}
/* 商品卡片 - 添加美观的间距和圆角 */
.item-card-fixed {
  background: #fff;
  margin: 15rpx 30rpx; /* 添加左右间距和顶部间距 */
  padding: 20rpx; /* 增加内边距让内容更舒适 */
  display: flex;
  align-items: center;
  border-radius: 16rpx; /* 添加圆角 */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1); /* 添加阴影 */
  flex-shrink: 0; /* 防止被压缩 */
  border: 1rpx solid #f0f0f0; /* 添加边框 */
}

.item-image {
  width: 70rpx; /* 稍微增大图片 */
  height: 70rpx;
  border-radius: 12rpx; /* 增加图片圆角 */
  margin-right: 20rpx; /* 增加右边距 */
}

.item-info {
  flex: 1;
}

.item-title {
  font-size: 28rpx; /* 稍微增大字体 */
  color: #333;
  display: block;
  margin-bottom: 6rpx; /* 增加间距 */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: 500; /* 添加字重 */
}

.item-price {
  font-size: 30rpx; /* 稍微增大价格字体 */
  color: #ff4d4f;
  font-weight: bold;
}

/* 消息滚动区域 - 使用flex布局，不用fixed */
.messages-scroll {
  flex: 1;
  background: #f5f5f5;
  overflow-y: auto;
  padding: 0;
  margin: 0;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 15rpx;
  color: #999;
  font-size: 24rpx;
}

/* 消息项 - 完全重置，无特殊处理 */
.message-item {
  margin-bottom: 25rpx;
}

/* 移除第一条消息的特殊样式 - 让它自然流动 */
.message-item:first-child {
  margin-top: 0;
}

/* 第一条消息的时间标签正常处理 */
.message-item:first-child .message-time {
  margin-top: 10rpx;
  margin-bottom: 15rpx;
}

/* 最后一条消息增加足够的底部间距 */
.message-item:last-child {
  margin-bottom: 0rpx; /* 增加一点间距 */
}

.message-time {
  text-align: center;
  margin: 20rpx 0 15rpx 0;
}

.message-time text {
  font-size: 24rpx;
  color: #999;
  background: rgba(0,0,0,0.05);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
}

.message-content {
  display: flex;
  padding: 0 30rpx;
  align-items: flex-start;
}

/* 自己的消息靠右 */
.message-item.self .message-content {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin: 0 15rpx;
}

/* 消息气泡 */
.message-bubble {
  max-width: 480rpx;
  padding: 16rpx 20rpx;
  border-radius: 18rpx;
  position: relative;
}

/* 他人消息气泡 */
.message-item.other .message-bubble {
  background: #fff;
  border-top-left-radius: 6rpx;
}

/* 自己消息气泡 */
.message-item.self .message-bubble {
  background: #0096c3;
  border-top-right-radius: 6rpx;
}

/* 文本消息 */
.message-text {
  font-size: 28rpx;
  line-height: 1.4;
  word-wrap: break-word;
}

.message-item.other .message-text {
  color: #333;
}

.message-item.self .message-text {
  color: #fff;
}

/* 图片消息 */
.message-image {
  width: 280rpx;
  height: 280rpx;
  border-radius: 12rpx;
  display: block;
}

/* 商品消息卡片 */
.message-item-card {
  background: rgba(255,255,255,0.9);
  border-radius: 12rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  min-width: 360rpx;
}

.message-item.self .message-item-card {
  background: rgba(255,255,255,0.2);
}

.item-card-image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.item-card-info {
  flex: 1;
}

.item-card-title {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.message-item.self .item-card-title {
  color: #fff;
}

.item-card-price {
  font-size: 26rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.message-item.self .item-card-price {
  color: #ffeb3b;
}

/* 系统消息 */
.system-message {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  font-style: italic;
}

/* 空消息提示 */
.empty-messages {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
}

/* 底部占位 - 确保充足的占位高度 */
.bottom-placeholder {
  height: 48rpx; /* 增加占位高度 */
}

/* 输入栏 - 固定在底部 */
.input-bar {
  background: #fff;
  border-top: 1rpx solid #eee;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  transition: bottom 0.3s ease;
  z-index: 1001;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
}

.input-container {
  display: flex;
  align-items: center;
  padding: 15rpx 15rpx; 
  min-height: 60rpx;
}

.input-extra {
  display: flex;
  margin-right: 20rpx;
  align-items: center;
}

.extra-btn {
  font-size: 32rpx;
  margin-right: 20rpx;
  padding: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #f5f5f5;
  transition: background 0.2s;
}

.extra-btn:active {
  background: #e8e8e8;
}

.text-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  min-height: 40rpx;
  margin-right: 20rpx;
  line-height: 1.4;
  border: none;
  outline: none;
}

.input-placeholder {
  color: #999;
}

.send-btn {
  background: #ccc;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  transition: background 0.3s;
  min-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
}

.send-btn.active {
  background: #0096c3;
}

/* 适配安全区域 */
.input-bar {
  padding-bottom: env(safe-area-inset-bottom);
}