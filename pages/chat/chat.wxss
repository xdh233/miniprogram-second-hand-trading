/* 容器 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

/* 商品信息卡片 */
.item-card {
  background: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-title {
  font-size: 28rpx;
  color: #333;
}

.item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

.item-status {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.item-arrow {
  color: #ccc;
  margin-left: 20rpx;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx;
}

/* 消息项 */
.message-item {
  margin-bottom: 30rpx;
}

/* 时间分割线 */
.time-divider {
  text-align: center;
  margin: 20rpx 0;
}

.time-divider text {
  font-size: 24rpx;
  color: #999;
  background: rgba(0, 0, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 聊天消息 */
.chat-message {
  display: flex;
  align-items: flex-start;
  margin-top: 20rpx;
}

.chat-message.self {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.message-content {
  max-width: 60%;
}

/* 文本消息 */
.text-message {
  background: white;
  padding: 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.4;
  color: #333;
  word-break: break-all;
}

.self .text-message {
  background: #667eea;
  color: white;
}

/* 图片消息 */
.image-message {
  max-width: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.message-image {
  width: 100%;
  max-height: 400rpx;
}

/* 商品分享消息 */
.shared-item {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  width: 400rpx;
}

.shared-image {
  width: 100%;
  height: 200rpx;
}

.shared-info {
  padding: 16rpx;
}

.shared-title {
  font-size: 28rpx;
  color: #333;
}

.shared-price {
  font-size: 32rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

.shared-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 输入区域 */
.input-section {
  background: white;
  border-top: 1rpx solid #eee;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 快捷功能区 */
.quick-actions {
  display: flex;
  padding: 20rpx;
  background: #f8f8f8;
}

.quick-item {
  text-align: center;
  margin-right: 40rpx;
}

.quick-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.quick-text {
  font-size: 24rpx;
  color: #666;
}

/* 输入栏 */
.input-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.input-left,
.input-right {
  display: flex;
  align-items: center;
}

.input-center {
  flex: 1;
  margin: 0 20rpx;
}

.message-input {
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 20rpx;
  font-size: 28rpx;
  min-height: 72rpx;
  max-height: 200rpx;
}

.action-btn {
  padding: 10rpx;
}

.send-btn {
  background: #e0e0e0;
  color: white;
  padding: 12rpx 30rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.send-btn.active {
  background: #667eea;
}

/* 商品选择弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 80%;
  max-height: 80vh;
}

.modal-title {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border-bottom: 1rpx solid #eee;
}

.item-list {
  max-height: 60vh;
  padding: 20rpx;
}

.selectable-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.modal-actions {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 图片预览 */
.image-preview {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: black;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.preview-close {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
}