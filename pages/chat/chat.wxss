  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}
.nav-left {
  width: 80rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 44rpx;
  color: #333;
  font-weight: bold;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-title {
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  display: block;
}

.nav-subtitle {
  font-size: 22rpx;
  color: #52c41a;
  display: block;
  margin-top: 2rpx;
}

.nav-right {
  width: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.nav-more {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
