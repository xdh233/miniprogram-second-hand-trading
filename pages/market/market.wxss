/* market.wxss - 闲置市场页面样式 */

page {
  background-color: #f5f5f5;
  height: 100%;
  margin: 0;
  padding: 0;
}

.container {
  background: #f5f5f5;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
}

/* 统一内容容器 */
.content-container {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部搜索栏 - 固定高度 */
.search-header {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0; /* 不被压缩 */
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  height: 56rpx;
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.search-placeholder {
  color: #999;
}

/* 分类标签栏 - 固定高度 */
.category-section {
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0; /* 不被压缩 */
}

.category-tabs {
  white-space: nowrap;
  padding: 20rpx 0;
}

.category-tab {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin: 0 15rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 20rpx;
  transition: all 0.3s;
  background: #f5f5f5;
}

.category-tab.active {
  color: #007aff;
  background-color: #e8f4ff;
}

.category-tab:first-child {
  margin-left: 30rpx;
}

.category-tab:last-child {
  margin-right: 30rpx;
}

/* 关键修复：商品列表容器 - 占满剩余空间 */
.items-container {
  flex: 1; /* 占满剩余空间 */
  height: 0; /* 配合 flex: 1 使用 */
  background: #f5f5f5;
}

/* 商品网格布局 */
.items-grid {
  width: 100%;
  font-size: 0; /* 消除inline-block间隙 */
  box-sizing: border-box;
  padding: 15rpx;
}

.column {
  display: inline-block;
  width: 50%;
  vertical-align: top;
  font-size: 28rpx; /* 恢复字体大小 */
  box-sizing: border-box;
}

.column .item-card {
  display: block; /* 确保卡片正常显示 */
}

.left-column {
  padding-right: 10rpx;
}

.right-column {
  padding-left: 10rpx;
}

.item-card {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
}

/* 商品图片容器 */
.item-image-container {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.item-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
}

.status-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

/* 商品信息 */
.item-info {
  padding: 20rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 卖家信息 */
.seller-info {
  display: flex;
  align-items: center;
  position: relative;
}

.seller-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.seller-name {
  font-size: 24rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.trade-type {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
  margin-left: 12rpx;
}

.trade-type.sell {
  background-color: #ff6b35;
}

.trade-type.buy {
  background-color: #007aff;
}

/* 加载状态 */
.loading-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
  min-height: 400rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}

/* 初始加载状态 */
.initial-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  min-height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式调整 */
@media (max-width: 400px) {
  .item-card {
    width: 100%;
  }
  
  .items-grid {
    display: block;
  }
}