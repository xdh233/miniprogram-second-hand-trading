/* pages/post-detail/post-detail.wxss */

.page-container {
  min-height: 100vh;
  background: #92c4f7;
  display: flex;
  flex-direction: column;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 内容滚动区域 */
.content-container {
  flex: 1;
  padding: 0 24rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx;
}

/* 主帖卡片 */
.post-card {
  background: #fff;
  border-radius: 16rpx;
  margin: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 用户信息区域 */
.user-section {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  margin-right: 24rpx;
  border: 2rpx solid #f0f0f0;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 26rpx;
  color: #8e8e93;
}

.chat-btn {
  background: #0096c3;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  border: none;
  margin-left: auto;
}

.chat-btn::after {
  border: none;
}

/* 操作按钮区域 */
.action-buttons {
  display: flex;
  align-items: center;
  gap: 40rpx;
  margin-bottom: 0rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 0;
  background: none;
  border: none;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.action-btn.like-btn.liked {
  color: #ff3b30;
}

.action-btn.like-btn.liked .action-icon {
  color: #ff3b30;
  transform: scale(1.5);
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  transition: all 0.3s ease;
}

.action-btn.like-btn.liked .action-icon {
  transform: scale(1.1);
}

.action-count,
.action-text {
  font-size: 28rpx;
  color: inherit;
}

.share-btn {
  margin-left: auto;
}

.share-btn::after {
  border: none;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 24rpx;
}

.content-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #1a1a1a;
  word-break: break-word;
}

/* 图片展示区域 */
.images-section {
  margin: 20rpx 0;
}

/* 单图样式 */
.single-image {
  border-radius: 12rpx;
  overflow: hidden;
}

.post-image-single {
  width: 100%;
  max-height: 600rpx;
  border-radius: 12rpx;
}

/* 多图网格样式 */
.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.grid-item {
  border-radius: 8rpx;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

/* 2张图片 */
.images-grid-2 .grid-item {
  width: calc(50% - 4rpx);
  height: 200rpx;
}

/* 3张图片 */
.images-grid-3 .grid-item:first-child {
  width: 100%;
  height: 240rpx;
}

.images-grid-3 .grid-item:not(:first-child) {
  width: calc(50% - 4rpx);
  height: 160rpx;
}

/* 4张图片 */
.images-grid-4 .grid-item {
  width: calc(50% - 4rpx);
  height: 180rpx;
}

/* 5-9张图片 */
.images-grid-5 .grid-item:nth-child(-n+2) {
  width: calc(50% - 4rpx);
  height: 180rpx;
}

.images-grid-5 .grid-item:nth-child(n+3) {
  width: calc(33.33% - 6rpx);
  height: 140rpx;
}

.images-grid-6 .grid-item,
.images-grid-7 .grid-item,
.images-grid-8 .grid-item,
.images-grid-9 .grid-item {
  width: calc(33.33% - 6rpx);
  height: 140rpx;
}

/* 评论容器 */
.comments-container {
  background: #fff;
  border-radius: 16rpx;
  margin: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 评论标题和排序区域 */
.comments-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.comments-title-section {
  display: flex;
  align-items: center;
}

.comments-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.comments-count {
  font-size: 28rpx;
  color: #8e8e93;
  margin-left: 8rpx;
}

/* 排序标签组样式 */
.sort-tabs {
  display: flex;
  gap: 32rpx;
}

.sort-tab {
  padding: 8rpx 0;
  background: transparent;
  border: none;
  transition: all 0.3s ease;
}

.sort-tab:active {
  transform: scale(0.95);
}

.sort-tab-text {
  font-size: 28rpx;
  color: #8e8e93;
  transition: all 0.3s ease;
}

.sort-tab.active .sort-tab-text {
  color: #0096c3;
  font-weight: 600;
}

/* 评论列表 - 修改后的样式 */
.comments-list {
  padding: 0 32rpx;
}

.comment-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  margin-right: 20rpx;
  border: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.comment-main {
  flex: 1;
}

/* 第一行：昵称和楼主标签 */
.comment-user-info {
  margin-bottom: 12rpx;
}

.comment-user-left {
  display: flex;
  align-items: center;
}

.comment-username {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-right: 12rpx;
}

.author-tag {
  background: #0096c3;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

/* 第二行：评论内容 */
.comment-content {
  font-size: 28rpx;
  color: #1a1a1a;
  line-height: 1.5;
  word-break: break-word;
  display: block;
  margin-bottom: 12rpx;
}

/* 第三行：发布时间和操作按钮 */
.comment-bottom-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.comment-time {
  font-size: 24rpx;
  color: #8e8e93;
}

/* 操作按钮容器 */
.comment-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 评论点赞按钮 - 无框样式 */
.comment-like-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 12rpx;
  background: transparent;
  border: none;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.comment-like-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.comment-like-icon {
  width: 28rpx;
  height: 28rpx;
  transition: all 0.3s ease;
}

.comment-like-btn.liked .comment-like-icon {
  transform: scale(1.1);
}

.comment-like-count {
  font-size: 24rpx;
  color: #8e8e93;
  transition: all 0.3s ease;
}

.comment-like-btn.liked .comment-like-count {
  color: #ff3b30;
  font-weight: 500;
}

/* 评论回复按钮 */
.comment-reply-btn {
  padding: 8rpx 12rpx;
  background: transparent;
  border: none;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.comment-reply-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.comment-reply-text {
  font-size: 24rpx;
  color: #8e8e93;
  transition: all 0.3s ease;
}

.comment-reply-btn:active .comment-reply-text {
  color: #0096c3;
}

/* 加载和空状态 */
.loading-more,
.no-more-comments {
  text-align: center;
  padding: 32rpx;
  color: #8e8e93;
  font-size: 28rpx;
}

.empty-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
}

.empty-icon {
  font-size: 72rpx;
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-comment {
  width: 144rpx;
  height: 144rpx;
}

.empty-text {
  color: #8e8e93;
  font-size: 28rpx;
}

/* 底部占位 */
.bottom-placeholder {
  height: 120rpx;
}

/* 底部评论输入框 */
.comment-input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1rpx solid #e5e5ea;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.comment-input {
  flex: 1;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  font-size: 28rpx;
  min-height: 40rpx;
  margin-right: 20rpx;
  line-height: 1.4;
  border: none;
  outline: none;
}

.input-placeholder {
  color: #999;
}

.send-btn {
  background: #ccc;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  transition: background 0.3s;
  min-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
}

.send-btn.active {
  background: #0096c3;
}