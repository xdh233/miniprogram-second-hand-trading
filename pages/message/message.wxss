page {
  background-color: #fff;
  height: 100%;
  margin: 0;
  padding: 0;
}

.container {
  background: #fff;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 统一内容容器 - 和首页完全一致 */
.content-container {
  background: #fff;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部搜索栏 - 完全复制首页的样式 */
.search-header {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  height: 56rpx;
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.search-placeholder {
  color: #999;
}

/* 消息容器 - 完全复制首页的 posts-container */
.messages-container {
  flex: 1;
  background: #fff;
}

/* 消息分类 */
.message-types {
  display: flex;
  padding: 20rpx 0;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.type-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.type-icon.mention {
  background: #e8f3ff;
  color: #3a7bff;
}

.type-icon.comment {
  background: #e6f7ff;
  color: #36cfc9;
}

.type-icon.like {
  background: #fff2f0;
  color: #ff4d4f;
}

.type-text {
  font-size: 24rpx;
  color: #666;
}

.badge {
  position: absolute;
  top: -4rpx;
  right: 20%;
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 0 10rpx;
  height: 32rpx;
  min-width: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background: #eee;
  margin: 10rpx 30rpx;
}

/* 标题样式 */
.section-title {
  padding: 12rpx 30rpx 8rpx 30rpx;
  font-size: 28rpx;
  color: #999;
  background: #fff;
  margin: 0;
}

/* 聊天列表样式 */
.chat-list {
  background: #fff;
  margin: 0;
  padding: 0;
}

.chat-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
}

.chat-item:last-child {
  border-bottom: none;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.chat-info {
  flex: 1;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.chat-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.last-message {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.unread {
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 0 10rpx;
  height: 32rpx;
  min-width: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}