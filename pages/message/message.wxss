page {
  background-color: #fff;
  height: 100%;
  margin: 0;
  padding: 0;
}

.container {
  background: #fff;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.content-container {
  background: #fff;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 顶部搜索栏 - 完全复制首页的样式 */
.search-header {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 12rpx 20rpx;
  height: 56rpx;
  flex: 1;
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.search-placeholder {
  color: #999;
}

.mark-all-read {
  margin-left: 20rpx;
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #666;
}

/* 消息容器 - 完全复制首页的 posts-container */
.messages-container {
  flex: 1;
  background: #fff;
}

/* 消息分类 */
.message-types {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 120rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.type-icon.comment {
  background: #36cfc9;
  color: #36cfc9;
}

.type-icon.like {
  background: #fff2f0;
}



.type-icon-image {
  width: 48rpx;
  height: 48rpx;
}

.type-text {
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
  margin-top: 16rpx; 
}

.badge {
  position: absolute;
  top: -4rpx;
  right: 20%;
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 0 10rpx;
  height: 32rpx;
  min-width: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background: #eee;
  margin: 10rpx 30rpx;
}

/* 区块标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 30rpx 8rpx 30rpx;
  background: #fff;
  margin: 0;
}

.section-title {
  font-size: 28rpx;
  color: #999;
}

.chat-count {
  font-size: 22rpx;
  color: #ccc;
}

/* 聊天列表样式 */
.chat-list {
  background: #fff;
  margin: 0;
  padding: 0;
}

.chat-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
  position: relative;
  background: #fff;
}

.chat-item:last-child {
  border-bottom: none;
}

.chat-item.pinned {
  background: #f8f9ff;
}

.chat-item.muted {
  opacity: 0.7;
}

.pin-indicator {
  position: absolute;
  top: 15rpx;
  right: 30rpx;
  font-size: 20rpx;
  color: #3a7bff;
}

.chat-main {
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  margin-right: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.online-dot {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  width: 20rpx;
  height: 20rpx;
  background: #52c41a;
  border-radius: 50%;
  border: 3rpx solid #fff;
}

.mute-icon {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  font-size: 24rpx;
  background: #fff;
  border-radius: 50%;
  padding: 4rpx;
}

.chat-info {
  flex: 1;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.chat-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-tag {
  background: #fff7e6;
  border: 1rpx solid #ffd591;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
  max-width: 400rpx;
}

.item-tag text {
  font-size: 22rpx;
  color: #d48806;
}

.last-message {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-status {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.unread {
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 0 10rpx;
  height: 32rpx;
  min-width: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 30rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.start-chat-btn {
  background: #007aff;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
}

/* 搜索无结果 */
.no-results {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 30rpx;
  text-align: center;
}

.no-results-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.no-results-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.no-results-subtitle {
  font-size: 24rpx;
  color: #999;
}