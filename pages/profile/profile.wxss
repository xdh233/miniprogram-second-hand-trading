/* pages/profile/profile.wxss */

page {
  background-color: #fff;
  height: 100%;
  margin: 0;
  padding: 0;
}

.container {
  background: #fff;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 统一内容容器 - 和消息页面完全一致 */
.content-container {
  background: #fff;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 个人信息头部 */
.user-header {
  background: #fff;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f0f0f0;
  border: 2rpx solid #e0e0e0;
}

.user-details {
  flex: 1;
  margin-left: 30rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 28rpx;
  color: #666;
}

.settings-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background: #f8f8f8;
}

.settings-icon {
  font-size: 32rpx;
}

/* 功能列表容器 - 完全复制消息页面的 messages-container */
.functions-container {
  flex: 1;
  background: #fff;
}

/* 标题样式 - 完全复制消息页面 */
.section-title {
  padding: 12rpx 30rpx 8rpx 30rpx;
  font-size: 28rpx;
  color: #999;
  background: #fff;
  margin: 0;
}

/* 功能列表样式 - 完全复制消息页面的聊天列表 */
.function-list {
  background: #fff;
  margin: 0;
  padding: 0;
}

.function-item {
  padding: 30rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
  position: relative;
  transition: background-color 0.2s ease;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item:active {
  background-color: #f8f8f8;
}

.function-icon {
  font-size: 36rpx;
  margin-right: 30rpx;
  width: 40rpx;
  text-align: center;
}

.function-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.function-badge {
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 0 10rpx;
  height: 32rpx;
  min-width: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
  font-weight: bold;
}

/* 响应式处理 */
@media (max-width: 400px) {
  .user-name {
    font-size: 32rpx;
  }
  
  .user-id {
    font-size: 26rpx;
  }
  
  .function-text {
    font-size: 28rpx;
  }
}