/* pages/profile/profile.wxss */

page {
  background-color: #fff;
  height: 100%;
  margin: 0;
  padding: 0;
}

.container {
  background: #fff;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

/* 统一内容容器 - 和消息页面完全一致 */
.content-container {
  background: #fff;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 个人信息头部 */
.user-header {
  background: #fff;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f0f0f0;
  border: 2rpx solid #e0e0e0;
}

.user-details {
  flex: 1;
  margin-left: 30rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 28rpx;
  color: #666;
}

.settings-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  background: #f8f8f8;
}

.settings-icon {
  font-size: 32rpx;
}

/* 功能列表容器 - 完全复制消息页面的 messages-container */
.functions-container {
  flex: 1;
  background: #fff;
}

/* 标题样式 - 完全复制消息页面 */
.section-title {
  padding: 12rpx 30rpx 8rpx 30rpx;
  font-size: 28rpx;
  color: #999;
  background: #fff;
  margin: 0;
}

/* 功能列表样式 - 完全复制消息页面的聊天列表 */
.function-list {
  background: #fff;
  margin: 0;
  padding: 0;
}

.function-item {
  padding: 30rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  margin: 0;
  position: relative;
  transition: background-color 0.2s ease;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item:active {
  background-color: #f8f8f8;
}

.function-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx; 
}

.function-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
  font-weight: bold;
}

/* 余额显示特殊样式 */
/* 修复后 */
.balance-item {
  min-height: 80rpx; /* 确保有足够空间 */
}

.balance-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: #0096c3;
  margin-right: 16rpx;
  display: inline-block; /* 确保显示 */
  min-width: 100rpx;
  text-align: right;
}

/* 响应式处理 */
@media (max-width: 400px) {
  .user-name {
    font-size: 32rpx;
  }
  
  .user-id {
    font-size: 26rpx;
  }
  
  .function-text {
    font-size: 28rpx;
  }
}

/* 意见反馈弹窗样式 */
.feedback-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.feedback-modal-container {
  width: 600rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.feedback-modal-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.feedback-input-container {
  position: relative;
  margin-bottom: 30rpx;
}

.feedback-textarea {
  width: 100%;
  min-height: 300rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #fafafa;
}

.feedback-textarea:focus {
  border-color: #0096c3;
  background: white;
}

.textarea-placeholder {
  color: #999;
}

.char-count {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.feedback-modal-footer {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.feedback-cancel-btn {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 10rpx;
  padding: 24rpx 0;
  font-size: 30rpx;
}

.feedback-submit-btn {
  flex: 1;
  background: #0096c3;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 24rpx 0;
  font-size: 30rpx;
}

.feedback-cancel-btn:active {
  background: #e0e0e0;
}

.feedback-submit-btn:active {
  background: #0096c3;
}

/* 充值弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 60rpx;
  box-sizing: border-box;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  width: 100%;
  max-width: 600rpx;
  position: relative;
  z-index: 10000;
}

.recharge-modal {
  max-width: 640rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 当前余额显示 */
.current-balance {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.balance-label {
  font-size: 28rpx;
  color: #666;
}

.balance-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #0096c3;
}

/* 快速充值金额 */
.quick-amounts {
  margin-bottom: 32rpx;
}

.quick-amount-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.amount-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.amount-btn {
  text-align: center;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background: #fafafa;
  transition: all 0.2s ease;
}

.amount-btn.selected {
  background: #0096c3;
  color: #fff;
  border-color: #0096c3;
}

.amount-btn:active {
  transform: scale(0.98);
}

/* 自定义金额输入 */
.custom-amount {
  margin-bottom: 32rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
  display: block;
}

.amount-input-wrapper {
  display: flex;
  align-items: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: #fafafa;
  padding: 16rpx 20rpx;
}

.amount-input-wrapper:focus-within {
  border-color: #0096c3;
  background: white;
}

.currency-symbol {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
  font-weight: 500;
}

.amount-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.modal-button {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
  user-select: none;
}

.modal-button.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-button.confirm {
  background: #0096c3;
  color: #fff;
}