/* pages/publish-item/publish-item.wxss */
page {
  background: #f5f5f5;
  height: 100%;
}

.publish-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 内容容器 */
.content-container {
  flex: 1;
  padding: 20rpx 30rpx;
  overflow-y: auto;
  padding-bottom: 200rpx; /* 给底部发布按钮留出空间 */
}

/* 表单区块 */
.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.required {
  color: #ff4d4f;
  font-weight: normal;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: display;
}

.image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.add-image-btn:active {
  background: #f8f8f8;
  border-color: #0096c3;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

.image-tip {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 输入框 */
.text-input {
  width: calc(100% - 40rpx); /* 右侧留10rpx间隔 */
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  border: none;
  outline: none;
}

.textarea-input {
  width: calc(100% - 40rpx); /* 右侧留10rpx间隔 */
  min-height: 200rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  border: none;
  outline: none;
  line-height: 1.6;
}

.input-placeholder {
  color: #999;
}

.text-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 价格区域 */
.price-row {
  display: flex;
  gap: 30rpx;
}

.price-item {
  flex: 1;
}

.price-label {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
}

.price-input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.currency {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
  font-weight: 600;
}

.price-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 0;
  border: none;
  outline: none;
  background: transparent;
}

/* 选择器 */
.picker-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 15rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

/* 发布提示 */
.publish-tips {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.tip-text:last-child {
  margin-bottom: 0;
}

/* 底部发布按钮 */
.publish-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #eee;
  z-index: 100;
}

.publish-button {
  width: 100%;
  height: 88rpx;
  background: #ddd;
  color: #999;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.publish-button.active {
  background: #0096c3;
  color: #fff;
}

.publish-button.active:active {
  background: #0096c3;
}

.publish-button[disabled] {
  opacity: 0.6;
}
/* picker 选择器样式调整 */
.picker {
  font-size: 48rpx !important;
}

.picker-item-custom {
  font-size: 36rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
}
/* 自定义选择器样式 */
.custom-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.custom-picker-mask.show {
  opacity: 1;
  visibility: visible;
}

.custom-picker {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.custom-picker-mask.show .custom-picker {
  transform: translateY(0);
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.picker-cancel, .picker-confirm {
  font-size: 32rpx;
  color: #0096c3;
}

.picker-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}